<div class="container-fluid block mx-auto my-12 p-8 bg-gray-200 w-1/3 border border-green-800 rounded-lg shadow-lg text-gray-800 my-36">
  <h1
    class="text-center text-green-900 uppercase border border-green-800 bg-gray-300 sm:rounded-lg py-2 text-3xl font-bold">
    Editar tarea</h1>
  {{#each tasks}}
  <form action="" method="POST" class="mt-4">
    <input type="text" class="border border-green-800 rounded-md w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white" placeholder="Ingresa el nuevo titulo de la tarea" name="title" value="{{title}}">
    <textarea class="border border-green-800 rounded-md w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white h-40" placeholder="Ingresa la nueva descripcion de tu tarea"
      name="description">{{description}}</textarea>
    <div>
      <button type="submit" class="sm:rounded-lg  bg-green-900 w-full text-lg text-white font-semibold p-2 my-3
      hover:bg-green-800 focus:bg-green-700">Actualizar tarea</button>
      <button type="submit" class="sm:rounded-lg  bg-yellow-500 w-full text-lg text-black font-semibold p-2 my-3
      hover:bg-yellow-400 focus:bg-yellow-500">Ir a mis tareas</button>
    </div>
  </form>
  {{/each}}
</div>